{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Jest Test",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["${file}", "--config", "${workspaceRoot}/config/jest/config.json", "--runInBand"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Jest Tests",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["--config", "${workspaceRoot}/config/jest/config.json", "--runInBand"],
      "outputCapture": "std"
    }
  ]
}
